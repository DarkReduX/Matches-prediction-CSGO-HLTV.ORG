@model IEnumerable<CSGO_match_result_prediction_курсовая_практика_.Models.MatchInfo>

<div id="current" class="block fw_with_sidebar f_left live_enabled no_chat">
    <div class="block_heading">
        <a href="https://positive.bet/#" class="active"
           id="show_single"><i></i>ТЕКУЩИЕ МАТЧИ</a> <a style="display:none;"
                                                        href="https://positive.bet/#" id="show_stream">
            <i></i>Просмотр<span href="#"
                                 class="stream_minimize"></span><span href="#" class="stream_close"></span>
        </a>
    </div>


    <div class="block_content images_active" id="current_matches_block">

        @foreach (var item in Model)
        {
            var team_predicted = item.Prediction.Id == item.TeamsInfo.ToList()[0].Id ? "bet_1" : "bet_2";
            <div class="event line_event csgo_event @team_predicted" data-app_id="570" data-id="95082">
                <div class="event_cont">
                    <a href="/Match/TeamDetails/@item.TeamsInfo.ToList()[0].Id" data-raw_id="49" class="left m_open">
                        <div class="team_logo">
                            <img alt="@item.TeamsInfo.ToList()[0].Name" class=""
                                 src="@item.TeamsInfo.ToList()[0].LogoUrl">
                        </div>
                        <span class="team_name">@item.TeamsInfo.ToList()[0].Name</span><br>
                        <!--<span class="sum odds_icon">1.219</span> <span class="percent_sum">
                            77<i class="rrpercent"></i>
                        </span>-->
                    </a>
                    <div class="center">
                        <span class="event_name">@item.EventName</span> <span class="event_type">
                            @item.MatchFormat
                        </span>
                        <a href="" class="stream"
                           data-id="RU:tdota2mc_ru|EN:tesl_dota2b|">Просмотр</a>
                        <span class="timer soon" data-start="05/13/2021 16:00:00">
                            Матч начался<b class="hide_on_mobile"> уже</b>
                        </span>
                    </div>
                    <a href="Match/TeamDetails/@item.TeamsInfo.ToList()[0].Id" data-raw_id="7889" class="right m_open">
                        <div class="team_logo">
                            <img alt="@item.TeamsInfo.ToList()[1].Name" class=""
                                 src="@item.TeamsInfo.ToList()[1].LogoUrl">
                        </div>
                        <span class="team_name">@item.TeamsInfo.ToList()[1].Name</span><br>
                        <!--<span class="sum odds_icon">3.562</span> <span class="percent_sum">
                            23<i class="rrpercent"></i>
                        </span>-->
                    </a>
                </div>
                <div class="clearfix"></div>
            </div>
        }
    </div>
</div>